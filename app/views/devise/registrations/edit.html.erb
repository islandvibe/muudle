<h1>Change settings.</h1>
<div id="formBox" class="round">

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put }) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
  <%= f.label :name, "Nickname" %> (Must be unique)<br />
  <%= f.text_field :name %>
  </div>

  <div class="field">
  <%= f.label :country, "Country" %><br />
  <%= f.select :country, User::COUNTRIES %>
  </div>

  <div class="field">
  <%= f.label :avatar, "What's your animal?" %><br />
  <%= f.select :avatar, User::AVATARS %>
  </div>

  <div class="field">
  <%= f.label :mood, "What's your current mood?" %><br />
  <%= f.select :mood, User::MOODS %>
  </div>

  <div class="field">
  <%= f.label :email, "E-mail address" %><br />
  <%= f.text_field :email %>
  </div>

  <div class="field">
  <%= f.label :password, "New password" %> (Leave blank if you don't want to change it)<br />
  <%= f.password_field :password %>
  </div>

  <div class="field">
  <%= f.label :password_confirmation, "Confirm new password" %> (Leave blank if you don't want to change it)<br />
  <%= f.password_field :password_confirmation %>
  </div>

  <div class="field">
  <%= f.label :current_password %> (Used to confirm changes)<br />
  <%= f.password_field :current_password %>
  </div>

  <div class="actions">
  <%= f.submit "Update" %>
  </div>
<% end %>

<p>Unhappy? <%= link_to "Cancel my account", registration_path(resource_name), :confirm => "Are you sure?", :method => :delete %>.</p>
</div>
