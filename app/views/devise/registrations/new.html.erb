<h1>Sign up.</h1>
<div id="formBox" class="round">

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
  <%= f.label :name, "Nickname" %> (Must be unique)<br />
  <%= f.text_field :name %>
  </div>

  <div class="field">
  <%= f.label :country, "Country" %><br />
  <%= f.select :country, User::COUNTRIES %>
  </div>

  <div class="field">
  <%= f.label :avatar, "What's your animal?" %><br />
  <%= f.select :avatar, User::AVATARS %>
  </div>

  <div class="field">
  <%= f.label :mood, "What's your current mood?" %><br />
  <%= f.select :mood, User::MOODS %>
  </div>

  <div class="field">
  <%= f.label :email, "E-mail address" %> (Used for authentication only)<br />
  <%= f.text_field :email %>
  </div>

  <div class="field">
  <%= f.label :password, "Password" %><br />
  <%= f.password_field :password %>
  </div>

  <div class="field">
  <%= f.label :password_confirmation, "Confirm password" %><br />
  <%= f.password_field :password_confirmation %>
  </div>

  <div class="actions">
  <%= f.submit "Sign up!" %>
  </div>
<% end %>

<%= render :partial => "devise/shared/links" %>
</div>
