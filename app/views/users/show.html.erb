<div id="profileContainer">
   <div id="userName"><h1>This is <%= @user.name %>.</h1></div>
   <div id="avatar"> 
      <img src="../images/avatars/<%= @user.avatar %>_<%= @user.mood %>.png" 
               alt="Avatar: <%= @user.avatar %>, Mood: <%= @user.mood %>">
   </div>
   <div id="mood">
   <h2>Currently <strong><%= @user.mood %></strong></h2>
   </div>
   <div id="bottomBar">
    <div id="userInfo" class="round">
      <strong>Name</strong> <%= @user.name %><br />
      <strong>Country</strong> <%= @user.country %><br />
      <strong>E-mail</strong> <%= @user.email %><br />
      <strong>URL</strong>  muudle.com/<%= @user.name %>

    </div>
   <div id="snitch" class="round">
      <strong>Psst...</strong><br />If you know <%= @user.name %>'s latest mood...<br />
	<%= form_for @user, :url => user_path(@user), :html => { :method => :get } do |f| %>
	<%= render 'shared/error_messages', :object => f.object %>
 
	<div class="field">
	  <%= f.label :mood, "Current mood is " %>
	  <%= f.select :mood, User::MOODS %>
          <%= f.submit "Snitch!" %>
	</div>
	<% end %>
    </div>

   <div id="micropostsContainer">

        <h1 class="micropost">What's up?</h1>
        <%= form_for @micropost do |f| %>
           <%= render 'shared/error_messages', :object => f.object %>

           <div class="field">
              <%= f.label :content, "Why that mood?" %>
              <%= f.text_area :content %>
           </div>

           <div class="field">
              <%= f.hidden_field :author, :value => current_user.name %>
	      <%= f.hidden_field :agree, :value => "0" %>
	      <%= f.hidden_field :disagree, :value => "0" %>
	      <%= f.hidden_field :amused, :value => "0" %>
           </div>

           <div class="actions">
              <%= f.submit "Submit" %>
           </div>
         <% end %>

      <% unless @user.microposts.empty? %>
        <table class="microposts" summary="User microposts">
          <%= render @microposts %>
        </table>
        <%= will_paginate @microposts %>
      <% end %>
   </div>
</div>   
</div>
